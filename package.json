{
  "name": "webgpt",
  "version": "1.0.0",
  "private": true,
  "description": "WebGPT - Website-trained chatbot using RAG with multi-tenant SaaS architecture",
  "author": "WebGPT Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --filter=@webgpt/api",
    "dev:worker": "turbo run dev --filter=@webgpt/worker",
    "dev:admin": "turbo run dev --filter=@webgpt/admin",
    "dev:widget": "turbo run dev --filter=@webgpt/widget",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rimraf node_modules",
    "db:generate": "pnpm --filter @webgpt/api prisma:generate",
    "db:migrate": "pnpm --filter @webgpt/api prisma:migrate",
    "db:migrate:prod": "pnpm --filter @webgpt/api prisma:migrate:deploy",
    "db:push": "pnpm --filter @webgpt/api prisma:push",
    "db:seed": "pnpm --filter @webgpt/api prisma:seed",
    "db:studio": "pnpm --filter @webgpt/api prisma:studio",
    "db:reset": "pnpm --filter @webgpt/api prisma migrate reset",
    "docker:up": "docker-compose -f infra/docker-compose.local.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.local.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.local.yml logs -f",
    "prepare": "husky install || true",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}



